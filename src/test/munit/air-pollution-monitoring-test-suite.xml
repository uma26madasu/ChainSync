                         path="/esg/iot-readings">
                <http:body><![CDATA[#[output application/json
---
{
  "sensorId": "METHANE_SENSOR_001",
  "facilityId": "FACILITY_001",
  "sensorType": "METHANE",
  "readings": {
    "methane_ppm": 1500
  }
}]]]></http:body>
                <http:headers><![CDATA[#[output application/java
---
{
	"Authorization" : "Bearer test-token",
